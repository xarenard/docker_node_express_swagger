{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }

  },
    "rules": {
      "indent": [
        "error",
        "tab",
        {"SwitchCase":1}
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "switch-colon-spacing": [
        "error",
        {
          "after": true,
          "before": false
        }
      ]
    }
}